@page "/"
@using Cs2SkinsApp.Models
@using Cs2SkinsApp.Services
@inject Cs2SkinService SkinService
@inject FavouritesService Favourites

<h2 class="page-title">CS2 Skins Explorer</h2>
<p class="page-subtitle mb-4">
    Search CS2 skins, star your favourites, and get a random pick for inspiration.
</p>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}
else if (isLoading)
{
    <p>Loading skins from API...</p>
}
else
{
    <div class="search-row mb-3">
        <div class="flex-grow-1">
            <label class="form-label mb-1">Search by name or weapon</label>
            <input class="form-control"
                   placeholder="e.g. AK-47, Dragon Lore, AWP..."
                   @bind="searchText"
                   @bind:event="oninput" />
            @if (!string.IsNullOrWhiteSpace(searchText) && searchText.Length < 2)
            {
                <small class="text-danger">
                    Please enter at least 2 characters for filtering.
                </small>
            }
        </div>

        <div class="d-flex flex-wrap gap-2">
            <button type="button"
                    class="btn btn-primary"
                    @onclick="PickRandom">
                üé≤ Random skin
            </button>

            <a class="btn btn-warning"
               href="favourites">
                ‚≠ê Favourites (@Favourites.FavouriteIds.Count)
            </a>
        </div>
    </div>

    @if (randomSkin != null)
    {
        <div class="card card-random mb-4 position-relative">
            <button class="btn btn-sm btn-outline-light position-absolute top-0 end-0 m-2"
                    @onclick="CloseRandom">
                ‚úñ
            </button>
            <div class="card-body">
                <h4 class="card-title mb-1">
                    Random skin: @randomSkin.Name
                </h4>
                <h6 class="card-subtitle mb-2 text-muted-soft d-flex flex-wrap align-items-center gap-1">

                    @if (randomSkin.Rarity != null)
                    {
                        <span class="rarity-pill" style="@($"background-color:{randomSkin.Rarity.Color}")">
                            @randomSkin.Rarity.Name
                        </span>
                    }

                    @if (randomSkin.Stattrak)
                    {
                        <span class="badge bg-warning text-dark ms-1">StatTrak‚Ñ¢</span>
                    }

                    @if (randomSkin.Souvenir)
                    {
                        <span class="badge bg-info text-dark ms-1">Souvenir</span>
                    }
                </h6>
                <div class="text-center my-3">
                    <img src="@randomSkin.Image"
                         alt="@randomSkin.Name"
                         loading="lazy"
                         style="max-height:220px; object-fit:contain;" />
                </div>
                <p class="card-text mb-0">@CleanDescription(randomSkin.Description)</p>
                <button class="btn @(Favourites.IsFavourite(randomSkin.Id) ? "btn-warning" : "btn-outline-warning") mt-3"
                        @onclick="() => ToggleFavourite(randomSkin)">
                    @(Favourites.IsFavourite(randomSkin.Id) ? "‚òÖ Favourite" : "‚òÜ Add to favourites")
                </button>
            </div>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-2">
        <h3 class="mb-0">Skins</h3>
        <small class="text-muted-soft">
            Showing @VisibleSkins.Count() of @FilteredSkins.Count() results
        </small>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
        @foreach (var skin in VisibleSkins)
        {
            <div class="col">
                <div class="card card-skin h-100">
                    <div class="text-center mt-3 px-3">
                        <img src="@skin.Image"
                             alt="@skin.Name"
                             loading="lazy"
                             class="img-fluid"
                             style="max-height:180px; object-fit:contain;" />
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-1">@skin.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted-soft d-flex flex-wrap align-items-center gap-1">

                            @if (skin.Rarity != null)
                            {
                                <span class="rarity-pill" style="@($"background-color:{skin.Rarity.Color}")">
                                    @skin.Rarity.Name
                                </span>
                            }

                            @if (skin.Stattrak)
                            {
                                <span class="badge bg-warning text-dark ms-1">StatTrak‚Ñ¢</span>
                            }

                            @if (skin.Souvenir)
                            {
                                <span class="badge bg-info text-dark ms-1">Souvenir</span>
                            }
                        </h6>


                        <p class="card-text mb-3">
                            @CleanDescription(skin.Description)
                        </p>

                        <button class="btn @(Favourites.IsFavourite(skin.Id) ? "btn-warning" : "btn-outline-warning") mt-auto"
                                @onclick="() => ToggleFavourite(skin)">
                            @(Favourites.IsFavourite(skin.Id) ? "‚òÖ Favourite" : "‚òÜ Add to favourites")
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (FilteredSkins.Count() > visibleCount)
    {
        <div class="mt-4 text-center">
            <button class="btn btn-outline-primary" @onclick="LoadMore">
                Load more skins
            </button>
        </div>
    }
}

@code {
    private List<Skin> allSkins = new();
    private bool isLoading = true;
    private string? errorMessage;

    private string searchText = string.Empty;
    private Skin? randomSkin;
    private int visibleCount = 50;

    protected override async Task OnInitializedAsync()
    {
        var (skins, error) = await SkinService.GetSkinsAsync();
        allSkins = skins;
        errorMessage = error;
        isLoading = false;
    }

    private IEnumerable<Skin> FilteredSkins =>
        string.IsNullOrWhiteSpace(searchText) || searchText.Length < 2
            ? allSkins
            : allSkins.Where(s =>
                   (!string.IsNullOrEmpty(s.Name) &&
                    s.Name.Contains(searchText, StringComparison.OrdinalIgnoreCase)));

    private IEnumerable<Skin> VisibleSkins => FilteredSkins.Take(visibleCount);

    private void LoadMore() => visibleCount += 50;

    private void ToggleFavourite(Skin skin) => Favourites.ToggleFavourite(skin.Id);

    private void PickRandom()
    {
        var source = FilteredSkins.Any() ? FilteredSkins.ToList() : allSkins;
        if (source.Count == 0) return;

        var rng = new Random();
        randomSkin = source[rng.Next(source.Count)];
    }

    private string CleanDescription(string? description)
    {
        if (string.IsNullOrWhiteSpace(description))
            return string.Empty;

        var text = description;

        var markerIndex = text.IndexOf("\\n\\n<i>", StringComparison.OrdinalIgnoreCase);
        if (markerIndex >= 0)
        {
            text = text.Substring(0, markerIndex);
        }

        text = text.Replace("\\n", " ");

        return text.Trim();
    }
    private void CloseRandom()
    {
        randomSkin = null;
    }


}
